
<div class="col-md-9">
  <div class = "scrollable" id="table_income" style="width:100%; max-height:400px; overflow:auto; background-color: white">
      
        <table class = "table table-bordered table-hover table-responsive text-center">
  <thead>
    <tr>
      <th class="text-center">Amount</th>
      <th class="text-center">Category</th>
      <th class="text-center">Issued_at</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.amount %></td>
        <td>
          <% income.income_categories.each do |i| %>
            <%= i.name %>    
          <% end %>
        </td>
        <td><%= income.issued_at %></td>
        <td>
        <span><%= link_to 'Edit', edit_income_path(income), remote: true, class: "btn btn-primary" %></span> - 
        <span><%= link_to 'Delete', income, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<div class="col-md-3 form" id="form_income">
  <%= render 'form', income: @income %>
</div>