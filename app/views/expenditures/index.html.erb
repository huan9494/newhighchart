  <p id="notice"><%= flash[:notice] %></p>

<div class = "well" id = "course-list-header">
  <b>EXPENSE</b>
  <button class="btn btn-info navbar-right" id="btn_expense">New Expense</button>

</div>

<div id="expense">
<div class="col-md-9">
  <div class = "scrollable" id="table_expense" style="width:100%; max-height:400px; overflow:auto; background-color: white;">
    <table class = "table table-hover table-bordered table-responsive text-center">
    <thead>
    <tr>
      <th class="text-center">Amount</th>
      <th class="text-center">Category</th>
      <th class="text-center">Issued_at</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @expenditures.each do |expenditure| %>
      <tr>
        <td><%= expenditure.amount %></td>
        <td>
          <% expenditure.expenditure_categories.each do |e| %>
            <%= e.name %>   
          <% end %>
        </td>
        <td><%= expenditure.issued_at %></td>
        <td>
        <span class="edit"><%= link_to 'Edit', edit_expenditure_path(expenditure), remote: true, class: " btn btn-primary" %></span> - 
        <span class="delete"><%= link_to 'Delete', expenditure, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: " btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

  <div class="col-md-3 form" id="form_expense">
    <%= render 'form', expenditure: @expenditure %>
  </div>
</div>