
<div class="col-md-9">
  <div class = "scrollable" id="table_expense" style="width:100%; max-height:400px; overflow:auto">
    <table class = "table table-hover table-bordered table-responsive">
    <thead>
    <tr>
      <th>Amount</th>
      <th>Category</th>
      <th>Issued_at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @expenditures.each do |expenditure| %>
      <tr>
        <td><%= expenditure.amount %></td>
        <td>
          <% expenditure.expenditure_categories.each do |e| %>
            <%= e.name %>   
          <% end %>
        </td>
        <td><%= expenditure.issued_at %></td>
        <td>
        <span><%= link_to 'Edit', edit_expenditure_path(expenditure), remote: true %></span> - 
        <span><%= link_to 'Delete', expenditure, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<div class="col-md-3 form" id="form_expense">
    <%= render 'form', expenditure: @expenditure %>
</div>